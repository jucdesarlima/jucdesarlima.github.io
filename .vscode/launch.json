    "version": "0.2.0",
    "configurations": [
        {
            "name":"Launch Chrome Local Files",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "trace":true,
            "webRoot": "${workspaceRoot}/",
            "file":"${workspaceRoot}/hands-on/donutchart.html", 
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "name":"Launch Chrome against localhost, qith sourcemaps",
            "type":"chrome",
            "request":"launch",
            "url":"http://localhost/hands-on/donutchart.html",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}" 
        }
    ]
}